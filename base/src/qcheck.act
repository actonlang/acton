from random import *

def qcheck_int_1(name: str, prop: (int) -> bool, verbose = False)->int:
    print("Testing",name)
    i: int = 1
    while i <= 100:
        m = i*i
        a = randint(-m,m)
        if not prop(a):
            print("   ",name,"failed after",i,"tests:\n",a,"\n")
            return 1
        else:
            if verbose:
                print("   Argument =",a,"; passed")
        i += 1
    print("   OK,",name,"passed 100 tests\n")
    return 0

