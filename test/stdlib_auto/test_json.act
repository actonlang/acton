#            await async env.exit(1)

        print()

    print("Testing: JSON str -> data -> JSON str")
    test_json = [
        """{"a":true,"b":false}""",
        """{"a":"1","b":2,"c":3.1}""",
        """{"a":{"b":"1","c":2,"d":[1,2]}}""",
        """{"a":[1,2,3]}""",
        """{"a":[1.1,2.2,3.3]}""",
        """{"a":[[1,2,3],[1,2,3]]}""",
        """{"a":[{"b":"1","c":2,"d":[1,2]},{"b":"1","c":2,"d":[1,2]}]}""",
    ]
    for s in test_json:
        print(s)
        d = json.decode(s)
        print(d)
        e = json.encode(d)
        if s is not None and e is not None and s != e:
            print("MISMATCH")
