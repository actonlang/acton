actor main(env):

    print("Testing: data -> JSON str -> data")
    test_data = [
        {"a": True, "b": False},
        {"a": "1", "b": 2, "c": 3.1},
        {"a": {"b": 1, "c": 2, "d": [1, 2], "e": [1.1, 2.2]}},
        {"a": [1, 2, 3], "b": [1.1, 2.2, 3.3]},
        {"a": [[1, 2, 3], [1, 2, 3]]},
        {"a": [{"b": 1, "c": 2, "d": [1, 2]}, {"b": 1, "c": 2, "d": [1, 2]}]},
    ]
    for s in test_data:
        print(s)
        e = json.encode(s)
        print(e)
        d = json.decode(e)
        print(d)
