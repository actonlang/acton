        """<a>\n    <b1>hej</b1>\n    <b2>test</b2>\n</a>""",
        """<a xmlns="foo"><b>2</b></a>""",
        """<a xmlns:ns="foo"><ns:b>2</ns:b></a>""",
    ]
    for s in test_xml:
        print(s)
        d = xml.decode(s)
        print(d)
        e = xml.encode(d)
        print(e)

        if s is not None and e is not None:
            testing.assertEqual(e, s, "XML str -> data -> XML str")
        if s is not None and e is not None and s != e:
            print("MISMATCH")
